{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rewriteRelativeImportExtensions": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
